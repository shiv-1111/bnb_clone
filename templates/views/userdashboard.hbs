<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Hello, world!</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"> -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/css/style.css" type="text/css">
</head>


<body>



    {{>dashboardmodal}}

    <div class="container-fluid mb-2" id="header_container_wrapper">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto rounded">
                <!-- header section -->
                <header id="header_container bg-light">
                    <!-- top header part -->
                    <div id="top_header">

                        <div id="top_front_header"><span id="main_icon" class="material-symbols-outlined">
                                home_app_logo
                            </span><a href="http://localhost:3000/">
                                <h2>airbnb</h2>
                            </a></div>
                        <div id="top_middle_header" onclick="toggleSearchContainer()">
                            <div><span>Search</span></div>
                            <div><button class="submit"><span class="material-symbols-outlined search_icon">
                                        search
                                    </span></button></div>
                        </div>
                        <div id="top_end_header">
                            <div id="host_div" data-name = {{name}}>
                                <a href="http://localhost:3000/user/myaccount" id="user_info">
                                    Hello {{name}}
                                </a>
                            </div>
                            <div id="dropdown_wrapper">

                                <div id="dropdown_container">
                                    <div id="top_header_dropdown_container"><span
                                            class="material-symbols-outlined dropdown_icon">
                                            menu
                                        </span><span class="material-symbols-outlined account_icon">
                                            account_circle
                                        </span>
                                    </div>
                                    <div id="dropdown_button_container" class="hidden">
                                        <input type="button" value="My Account" class="header_dropdown_btn">
                                        <input type="button" value="Register Home" class="header_dropdown_btn">
                                        <input type="button" value="Log Out" class="header_dropdown_btn">
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- bottom header part -->
                    <form id="bottom_header" class="hidden" target="/Homes" method="post">
                        <div id="bottom_front_header"><label for="destination">Where</label>
                            <select name="destination" id="destination">
                                <option selected disabled>Search Destination</option>
                                <option value="all">Point me anywhere</option>
                            </select>
                        </div>

                        <div id="bottom_end_header">
                            <div id="guests"><span>Who</span>
                                <span onclick="selectGuests()" class="span_fade">Add guests</span>
                            </div>
                            <div id="guest_count_container" class="hidden">
                                <div>
                                    <div>Guests:</div>
                                    <div>
                                        <span class="material-symbols-outlined" id="minus_icon" onclick="minusOne()">
                                            remove
                                        </span>
                                        <input type="text" name="guest_count" id="guest_count" placeholder="0"
                                            value="0"><span class="material-symbols-outlined" id="plus_icon"
                                            onclick="plusOne()">
                                            add_circle
                                        </span>
                                    </div>
                                </div>
                                <div>
                                    <label>Traveling with your pet?</label><br>
                                    <input type="radio" name="pet_yes" id="pet_yes">
                                    <label for="pet_yes">Yes</label>
                                    <input type="radio" name="pet_no" id="pet_no">
                                    <label for="pet_no">No</label>
                                </div>
                            </div>
                            <div id="search">
                                <button type="submit" id="search_submit_btn"><span
                                        class="material-symbols-outlined search_icon">
                                        search
                                    </span></button>
                            </div>
                        </div>
                    </form>
                </header>
            </div>
        </div>
    </div>

    <!-- main feed  -->
    <div class="col-md-10 col-12 mx-auto" id="main_feed_container">
        <div class="row" id="user_info_wrapper">
            <div><h2>Welcome to your dashboard, {{name}}</h2></div>
            <div id="edit-account-form">
                <h5><span>Edit Account Details-</span> <button id="edit-btn" class="btn">Edit</button></h5>
                <form action="#" method="post" class="hidden">
                    <div>
                        <label for="email" class="form-label">Change Email-id</label>
                    <input type="email" name="email" class="form-control" disabled value="">
                    </div>
                    <div>
                        <label for="phone" class="form-label">Change Phone No.</label>
                    <input type="text" name="phone" class="form-control" disabled value="">
                    </div>
                    <div>
                        <label for="npassword" class="form-label">Change Password</label>
                    <input type="password" name="npassword" class="form-control" disabled>
                    </div>
                    <div>
                        <label for="cpassword" class="form-label">Confirm New Password</label>
                    <input type="password" name="cpassword" class="form-control" disabled>
                    </div>
                    <div>
                        <label  for="password" class="form-label">Enter current password to confirm</label>
                    <input type="password" name="password" class="form-control" disabled required>
                    </div>
                    <button type="submit" class="btn">Save Changes</button>
                </form>
            </div>

            <div id="user-added-properties">
                <h5><span>My properties-</span></h5>
                <div class="no-data-container">
                    No properties added. <span><button class="btn" id="add-property-btn">Click </button></span>to add property.
                </div>
                <div id="my-property-container"></div>
            </div>

            <div id="user-bookings">
                <h5><span>My Bookings-</span></h5>
                <div class="no-data-container">
                    No bookings yet.
                </div>
                <div id="my-bookings-container"></div>
            </div>

        </div>
    </div>

    {{>footer}}

    <script src="/js/headerscript.js">
    </script>
    <script src="/js/userdashboardscript.js"></script>
</body>

</html>